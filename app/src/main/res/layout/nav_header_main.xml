<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/nav_header_horizontal_margin"
    android:paddingTop="@dimen/nav_header_vertical_margin"
    android:paddingRight="@dimen/nav_header_horizontal_margin"
    android:paddingBottom="@dimen/nav_header_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <EditText
        android:id="@+id/main.searchBar"
        style="@style/Theme.CIAO.SearchBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/main.searchButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="#00000000"
        android:minWidth="0dp"
        android:onClick="search"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        app:icon="?android:attr/actionModeWebSearchDrawable"
        app:iconGravity="end"
        app:iconPadding="0dp"
        app:iconTint="?attr/colorOnSecondary"
        app:layout_constraintBottom_toBottomOf="@+id/main.searchBar"
        app:layout_constraintEnd_toEndOf="@+id/main.searchBar"
        app:layout_constraintTop_toTopOf="@+id/main.searchBar" />

</androidx.constraintlayout.widget.ConstraintLayout>