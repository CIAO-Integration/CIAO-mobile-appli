<resources>
    <!-- Base application theme. -->
    <style name="Theme.CIAO" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_light</item>
        <item name="colorSecondaryVariant">@color/grey</item>
        <item name="colorOnSecondary">@color/text_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/grey</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/secular_one</item>
        <item name="android:textViewStyle">@style/Theme.CIAO.TextView</item>
        <item name="cardViewStyle">@style/Theme.CIAO.CardView</item>
        <item name="android:textColorSecondary">@color/text_dark</item> <!--pref summary color-->
        <item name="alertDialogTheme">@style/Theme.CIAO.AlertDialog</item>
        <item name="editTextStyle">@style/Theme.CIAO.EditText</item>
        <item name="android:colorBackground">@color/black</item>
    </style>

    <style name="Theme.CIAO.TextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="Theme.CIAO.CardView" parent="CardView">
        <item name="cardBackgroundColor">@color/grey</item>
        <item name="cardCornerRadius">@dimen/corner_radius</item>
    </style>

    <style name="Theme.CIAO.NavigationView" parent="Widget.MaterialComponents.NavigationRailView">
        <item name="android:background">@color/black</item>
        <item name="itemTextAppearance">@style/Theme.CIAO.TextView</item>
        <item name="itemTextColor">@color/text_dark</item>
    </style>

    <style name="Theme.CIAO.SearchBar" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:background">@drawable/search_bar</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="Theme.CIAO.AlertDialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@drawable/background_dialog_dark</item>
        <item name="colorAccent">@color/blue_light</item>
        <item name="textColorAlertDialogListItem">@color/text_dark</item>
        <item name="android:textColorPrimary">@color/text_dark</item>
        <item name="android:textColorSecondary">@color/text_dark</item>
        <item name="buttonBarButtonStyle">@style/Theme.CIAO.AlertDialog.Button</item>
    </style>

    <style name="Theme.CIAO.AlertDialog.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.CIAO.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/blue_dark</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.CIAO.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/text_dark</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>
</resources>